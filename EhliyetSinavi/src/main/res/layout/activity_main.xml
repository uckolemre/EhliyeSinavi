<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.emre.ehliyesinavi.MainActivity">


    <Button
        android:text="Şubat 2017"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/subat2017"
        android:background="@drawable/main_button"
        android:textColor="@color/beyaz"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/aralik2016"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/mayis2017"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subat2017"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/subat2017"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_button"
        android:text="MAYIS 2017"
        android:textColor="@color/beyaz"
        android:textSize="16dp"
        android:textStyle="italic" />

    <Button
        android:text="Aralık 2016"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/aralik2016"
        android:background="@drawable/main_button"
        android:textColor="@color/beyaz"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/agustos2016"
        android:layout_alignLeft="@+id/subat2017"
        android:layout_alignStart="@+id/subat2017" />

    <Button
        android:text="Ağustos 2016"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/agustos2016"
        android:background="@drawable/main_button"
        android:textColor="@color/beyaz"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/mayis2016"
        android:layout_alignLeft="@+id/aralik2016"
        android:layout_alignStart="@+id/aralik2016" />

    <Button
        android:text="Mayıs 2016"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/mayis2016"
        android:background="@drawable/main_button"
        android:textColor="@color/beyaz"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/subat2016"
        android:layout_alignLeft="@+id/agustos2016"
        android:layout_alignStart="@+id/agustos2016" />

    <Button
    android:text="Şubat 2016"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:id="@+id/subat2016"
    android:background="@drawable/main_button"
    android:textColor="@color/beyaz"
    android:textSize="16dp"
    android:textStyle="italic"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/mayis2016"
        android:layout_alignStart="@+id/mayis2016"
        android:layout_marginBottom="16dp" />





</RelativeLayout>
